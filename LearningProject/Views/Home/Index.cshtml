<style>


    ul {
        list-style: none;
        padding: 0;
    }

    li {
        margin-bottom: 30px;
    }

    a {
        display: block;
        padding: 10px;
        color: #fff;
        text-decoration: none;
        text-align: center;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

        a:hover {
            background-color: #2980b9;
        }

    /* Custom styles for each button */
    .color-red {
        background-color: #e74c3c;
    }

    .color-blue {
        background-color: #3498db;
    }

    .color-purple {
        background-color: #8e44ad;
    }

    .color-yellow {
        background-color: #f39c12;
    }

    .color-orange {
        background-color: #e67e22;
    }

    .color-green {
        background-color: #27ae60;
    }

    .color-pink {
        background-color: #FF66cc;
    }
</style>
<div>


    <h2>Utilizatori din API</h2>
    <ul id="usersList"></ul>

</div>


<script>
    fetch('/api/Users')
      .then(res => res.json())
      .then(data => {
          const ul = document.getElementById('usersList');
          ul.innerHTML = data.map(u => `<li>${u.name}</li>`).join('');
      });
</script>
