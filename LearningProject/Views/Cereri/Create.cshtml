@model LearningProject.Models.ViewModels.CreateNewCerereModel

@{
    ViewData["Title"] = "Create";
}
<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Creează o cerere nouă</h4>
        </div>

        <div class="row justify-content-center" style="margin: 10px;">
            <div class="col-md-6">
                <form asp-action="Create" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label>Denumire Cerere</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label>Descriere</label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label>Valoare</label>
                        <input asp-for="Value" type="number" step="0.01" class="form-control" />
                        <span asp-validation-for="Value" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        const valueInput = document.querySelector("input[name='Value']");

        if (valueInput) {
            // Blochează literele și simbolurile care nu au sens pentru numere întregi
            valueInput.addEventListener("keydown", e => {
                if (["e", "E", "+", "-", "."].includes(e.key)) e.preventDefault();
            });

            // Permite doar cifre
            valueInput.addEventListener("input", e => {
                e.target.value = e.target.value.replace(/\D/g, ''); // elimină tot ce nu e cifră
            });
        }
    </script>
}