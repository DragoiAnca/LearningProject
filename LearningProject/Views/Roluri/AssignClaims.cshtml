@model LearningProject.Models.ViewModels.RoleClaimsViewModel

@{
    ViewData["Title"] = "Atribuie Claims rolului";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">@Model.RolDenumire - Atribuie Claims</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left-circle"></i> Înapoi la listă
            </a>
        </div>

        <div class="card-body">
            <form asp-action="AssignClaims" method="post">
                <input type="hidden" asp-for="RolId" />

                <div class="mb-3">
                    @foreach (var claim in Model.Claims)
                    {
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox"
                                   asp-for="Claims[@Model.Claims.IndexOf(claim)].Selected" id="claim_@claim.ClaimId" />
                            <input type="hidden" asp-for="Claims[@Model.Claims.IndexOf(claim)].ClaimId" />
                            <label class="form-check-label" for="claim_@claim.ClaimId">
                                @claim.ClaimName
                            </label>
                        </div>
                    }
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success me-2">
                        <i class="bi bi-save"></i> Salvează
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Înapoi
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

