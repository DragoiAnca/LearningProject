@model LearningProject.Models.Departamente

@{
    ViewData["Title"] = "Create";
}



<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white d-flex">
            <h4 class="mb-0">Creaza departament</h4>
        </div>

        <div class="row" style="margin:10px">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Denumire_departament" class="control-label"></label>
                        <input asp-for="Denumire_departament" class="form-control" />
                        <span asp-validation-for="Denumire_departament" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="isActive" /> @Html.DisplayNameFor(model => model.isActive)
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="data_inceput" class="control-label"></label>
                        <input asp-for="data_inceput" class="form-control" />
                        <span asp-validation-for="data_inceput" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="data_dezactivare" class="control-label"></label>
                        <input asp-for="data_dezactivare" class="form-control" />
                        <span asp-validation-for="data_dezactivare" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin:10px">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>



    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
