@model LearningProject.Models.Cereri

<div class="modal-header flex-column align-items-start">
    <h5 class="modal-title mb-1">
        <i class="bi bi-pencil-square me-2"></i>
        Editează Cererea
    </h5>
    <p class="text-muted mb-0">
        <small>Editat de: <strong>@Model.CreatedByUser?.Username</strong></small>
    </p>
</div>

<div class="modal-body">
    <form asp-action="Edit" method="post" id="editCerereForm">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label>Denumire Cerere</label>
            <input asp-for="Name" class="form-control" />
            <span class="text-danger field-validation-valid" data-valmsg-for="Name" data-valmsg-replace="true"></span>
        </div>

        <div class="mb-3">
            <label>Scurta Descriere</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Creat la data:</label>
            <input asp-for="createdOn" class="form-control" type="date" readonly />
            <span asp-validation-for="createdOn" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input class="form-check-input" asp-for="IsActive" />
            <label>Status curent cerere</label>
        </div>

        <div class="mb-3">
            <label>Sters la data:</label>
            <input asp-for="Deleted" class="form-control" type="date" readonly/>
            <span asp-validation-for="Deleted" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Creat de:</label>
            <select asp-for="CreatedByUserId" class="form-select" asp-items="ViewBag.CreatedByUserId" disabled></select>
            <input type="hidden" asp-for="CreatedByUserId" />
            <span asp-validation-for="CreatedByUserId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Sters de:</label>
            <select class="form-select" disabled>
                <option selected>@Model.DeletedBy?.Name</option>
            </select>
            <input type="hidden" asp-for="DeletedById" />
            <span asp-validation-for="DeletedById" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Valoare:</label>
            <input asp-for="value" class="form-control" />
            <span asp-validation-for="value" class="text-danger"></span>
        </div>
    </form>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anulează</button>

    <button type="button" class="btn btn-primary" onclick="submitEditCerere(@Model.Id)">
        Salvează modificările
    </button>



    <!-- Pentru edit cu versiune nouă -->
    <button type="button" class="btn btn-warning" onclick="submitEditCerere(@Model.Id, true)">
        Salvează ca versiune nouă
    </button>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

}
