@model IEnumerable<LearningProject.Models.ErrorLog>

@{
    ViewData["Title"] = "Jurnal Erori";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Jurnal Erori</h4>
            <a asp-action="Create" class="btn btn-light btn-sm">
                <i class="bi bi-plus-circle"></i> Creează Nou
            </a>
        </div>

        <div class="card-body">
            <table class="table table-hover table-striped align-middle">
                <thead class="table-secondary">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.ErrorMessage)</th>
                        <th>@Html.DisplayNameFor(model => model.StackTrace)</th>
                        <th>@Html.DisplayNameFor(model => model.DateOccurred)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.ErrorMessage)</td>
                            <td>@Html.DisplayFor(modelItem => item.StackTrace)</td>
                            <td>@Html.DisplayFor(modelItem => item.DateOccurred)</td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2">

                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-outline-warning btn-sm"
                                       data-bs-toggle="tooltip" title="Editează Eroare">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>

                                    <a asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-outline-info btn-sm"
                                       data-bs-toggle="tooltip" title="Vezi Eroare">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-outline-danger btn-sm"
                                       data-bs-toggle="tooltip" title="Șterge Eroare">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
