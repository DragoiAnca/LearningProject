@model LearningProject.Models.Roluri

@{
    ViewData["Title"] = "Detalii Rol";
}


<!--Vizualizare utilizatori care au rolul de admin si user (id)-->

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Detalii Rol</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left-circle"></i> Înapoi la listă
            </a>
        </div>

        <div class="card-body">
            <dl class="row mb-4">
                <dt class="col-sm-3 fw-semibold text-secondary">
                    @Html.DisplayNameFor(model => model.Denumire_rol)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Denumire_rol)
                </dd>
            </dl>

            <div class="d-flex justify-content-end">
                <a asp-action="Edit" asp-route-id="@Model?.IdRol" class="btn btn-warning me-2">
                    <i class="bi bi-pencil-square"></i> Editează
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-list-ul"></i> Înapoi la listă
                </a>
            </div>
        </div>
    </div>
</div>
