@model LearningProject.Models.Claim

@{
    ViewData["Title"] = "Editează Claim";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i> Editează Claim</h4>
                    <a asp-action="Index" class="btn btn-outline-dark btn-sm">
                        <i class="bi bi-arrow-left-circle"></i> Înapoi
                    </a>
                </div>

                <div class="card-body">
                    <form asp-action="Edit" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="IdClaim" />

                        <div class="mb-3">
                            <input asp-for="name" class="form-control" placeholder="Actualizează denumirea claim-ului..." />
                            <span asp-validation-for="name" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-save2"></i> Salvează
                            </button>
                            <a asp-action="Index" class="btn btn-secondary px-4">
                                <i class="bi bi-x-circle"></i> Anulează
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

